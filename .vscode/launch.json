    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "MyGame",
            "request": "launch",
            "mainClass": "rowlandsAdventure2.MyGame",
            "args": "127.0.0.1 6010 UDP -debug",
            "vmArgs": "--add-exports java.base/java.lang=ALL-UNNAMED --add-exports java.desktop/sun.awt=ALL-UNNAMED --add-exports java.desktop/sun.java2d=ALL-UNNAMED -Dsun.java2d.d3d=false"
        },
        {
            "type": "java",
            "name": "NetworkingServer",
            "request": "launch",
            "mainClass": "rowlandsAdventure2Server.NetworkingServer"
        }
    ]
}